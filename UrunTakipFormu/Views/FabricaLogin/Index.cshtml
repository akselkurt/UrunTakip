@model UrunTakipFormu.Models.User
@{
    Layout = null;
}

<link href="~/Content/LoginForm.css" rel="stylesheet" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

</head>
<body id="LoginForm">
    <div class="container">
        <h1 class="form-heading">Zenginler Ürün Takip Sistemi</h1>
        <div class="login-form">
            <div class="main-div">
                <div class="panel">

                </div>
                @using (Html.BeginForm("Login","FabricaLogin"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                <form id="Login">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Personel Adı", @type = "text", @class = "form-control", @name = "inputEmail", @id = "inputEmail" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @placeholder = "Şifre", @class = "form-control", @name = "inputPassword", @id = "inputPassword" })
                    </div>
                    @*<div class="forgot">
            <a href="reset.html">Şifremi Unuttum</a>
        </div>*@
                    <input class="button" type="submit" value="Giriş">
                    @if (TempData["UserLoginFailed"] != null)
                    {
                        <p>@TempData["UserLoginFailed"]</p>
                    }
                </form>
                }
                </div>

        </div>
    </div>

</body>
</html>
